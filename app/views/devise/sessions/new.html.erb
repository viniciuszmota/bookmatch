<div class="login-container">

  <div class="login-logo">
    <%= image_tag "logo-principal.png", alt: "Logo BookMatch"%>
  </div>

  <div class="login-top">
   <p>Insira seu e-mail e sua senha para continuar</p>
  </div>

  <div class="login-form">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="form-inputs">
<%= f.input :email,
             required: false,
             autofocus: true,
             label: false,
             input_html: { autocomplete: "email", placeholder: "Seu e-mail", class: "center-placeholder" } %>

<%= f.input :password,
             required: false,
             label: false,
             input_html: { autocomplete: "current-password", placeholder: "Sua senha", class: "center-placeholder" } %>
     </div>

    <div class="continue-blue-button">
     <%= f.button :submit, "Continuar" %>
   </div>

    <div class="login-or">
     <p>ou</p>
   </div>

    <button id="google-button" class="google-button">
      <%= image_tag "google-logo.svg", alt: "Logo Google", class: "google-icon" %>
      Entrar com Google
    </button>

    <button id="apple-button" class="apple-button">
      <%= image_tag "apple-logo.svg", alt: "Logo Apple", class: "apple-icon" %>
      Entrar com Apple
    </button>

   <div class="login-terms">
     <p>   Ao clicar em “Continuar” ou em “Criar uma conta, você concorda com nossos Termos de Serviço e Política de Privacidade</p>
   </div>

  <% end %>
  </div>
</div>>
