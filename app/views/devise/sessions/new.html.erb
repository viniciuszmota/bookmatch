<div class="login-container">

  <div class="login-header">
   <h1>Entrar</h1>
  </div>

  <div class="login-form">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="form-inputs">
      <%= f.input :email,
                   required: false,
                    autofocus: true,
                   input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
       <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
     </div>

    <div class="continue-button">
     <%= f.button :submit, "Continuar" %>
   </div>

    <div class="login-or">
     <h2>ou</h2>
   </div>

   <button class="google-button">
     <%= f.button :submit, "Entrar com Google" %>
   </button>

    <button class="apple-button">
      <%= f.button :submit, "Entrar com Apple" %>
    </button>

   <div class="login-terms">
     <h3>Ao clicar em “Continuar” ou em “Criar uma conta, você concorda com nossos Termos de Serviço e Política de Privacidade</h3>
   </div>

  <% end %>
  </div>
   <%= render "devise/shared/links" %>
</div>>
