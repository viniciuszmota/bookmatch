<div class="sign-up-container">
  <div class="sign-up-logo">
    <%= image_tag "logo-principal.png", alt: "Logo BookMatch" %>
  </div>

  <div class="sign-up-top">
    <p><strong>Bem-vindo ao BookMatch!<strong></p>
    <p>Preencha suas informações pessoais abaixo</p>
  </div>

  <div class="sign-up-form">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :full_name,
                    required: true,
                    label: "Nome e Sobrenome",
                    input_html: { placeholder: "Nome e Sobrenome", class: "center-placeholder" } %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", placeholder: "Seu e-mail", class: "center-placeholder" } %>
        <%= f.input :gender,
                    required: true,
                    label: "Selecione seu gênero",
                    collection: ["Masculino", "Feminino", "Outros", "Prefiro não dizer"],
                    input_html: { class: "center-placeholder" } %>
        <%= f.input :password,
                    required: true,
                    label: false,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "Sua senha", class: "center-placeholder" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "new-password", placeholder: "Confirme sua senha", class: "center-placeholder" } %>

        <%= f.input :photo, label: "Foto", as: :file %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
