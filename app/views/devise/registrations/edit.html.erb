
  <div class="sign-up-logo">
    <%= image_tag "logo-principal.png", alt: "Logo BookMatch" %>
  </div>
<div class="orange-container">
  <div class="top">
    <p>Modifique suas informações pessoais abaixo</p>
  </div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: false, placeholder: "E-mail", class: "center-placeholder", required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
  hint: "leave it blank if you don't want to change it",
  required: false,
  label: false,
  placeholder: "Sua senha",
  class: "center-placeholder",
  input_html: { autocomplete: "new-password" } %>

<%= f.input :password_confirmation,
  required: false,
  label: false,
  placeholder: "Confirme sua senha",
  class: "center-placeholder",
  input_html: { autocomplete: "new-password" } %>

<%= f.input :current_password,
  hint: "we need your current password to confirm your changes",
  required: true,
  label: false,
  placeholder: "Sua senha atual",
  class: "center-placeholder",
  input_html: { autocomplete: "current-password" } %>

<div class="modify-button">
    <%= f.button :submit, "Modificar", class: "modify-button" %>
</div>
<% end %>

<%= link_to "Cancelar minha conta", registration_path(resource_name),
  data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
  method: :delete,
  class: "cancel-button-link" %>
<div class="exit">

<%= link_to "Voltar", :back, class: "back-button" %>


<%= button_to "Sair", destroy_user_session_path, method: :delete, class: "exit-button" %>

</div>
