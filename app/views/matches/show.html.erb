<%= simple_form_for [@match, @message],
  html: {class: "d-flex"} do |f|
%>

  <div id="messages" class="messages">
  <% @match.messages.each do |message| %>
    <%= render "messages/message", message: message %>
  <% end %>
</div>
  <% other_user = current_user == Like.find(@match.first_like_id).user_id ? Like.find(@match.first_like_id).user : Like.find(@match.second_like_id).user %>
  <%= f.input :content,
    label: false,
    placeholder: "Message #{other_user.full_name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  
<% end %>